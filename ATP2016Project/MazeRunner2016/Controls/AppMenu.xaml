<UserControl x:Class="MazeRunner2016.Controls.AppMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MazeRunner2016.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="New"></MenuItem>
                <MenuItem Header="Save"></MenuItem>
                <MenuItem Header="Load"></MenuItem>
            </MenuItem>
            <MenuItem Header="_Options">
                <MenuItem Header="Properties"></MenuItem>
                <MenuItem Header="Report a bug"></MenuItem>
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="Instructions"></MenuItem>
                <MenuItem Header="About us"></MenuItem>
            </MenuItem>
            <MenuItem Header="_Exit"></MenuItem>
        </Menu>
    </Grid>
</UserControl>
