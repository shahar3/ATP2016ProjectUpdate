<UserControl x:Class="MazeRunner2016.Controls.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MazeRunner2016.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Margin="0,15,0,-15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" ></RowDefinition>
            <RowDefinition Height="1*" ></RowDefinition>
            <RowDefinition Height="1*" ></RowDefinition>

        </Grid.RowDefinitions>

        <Button>DANA</Button>
        <Button Grid.Column="1">DANA</Button>
        <Button Grid.Column="1" Grid.Row="1" >Shahar</Button>
        <Slider Grid.Row="2" Grid.ColumnSpan="3" VerticalAlignment="Center" Minimum ="0" Maximum="30" Name="slideri"> </Slider>
        <TextBox Name="Queen" Grid.Row="1" Text="{Binding Path=Value,ElementName=slideri}"> </TextBox>

    </Grid>
</UserControl>
