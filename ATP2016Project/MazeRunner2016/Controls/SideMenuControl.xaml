<UserControl x:Class="MazeRunner2016.Controls.SideMenuControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MazeRunner2016.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <ListBox Name="sideMenu" SelectionChanged="sideMenu_SelectionChanged" >
            <ListBox.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="3,3" >
                    <GradientStop Color="#FFD4EFFA" Offset="0" />
                    <GradientStop Color="Aqua" Offset="1" />
                    <GradientStop Color="Red" Offset="1.1" />
                </LinearGradientBrush>
            </ListBox.Background>
        </ListBox>
    </Grid>
</UserControl>
